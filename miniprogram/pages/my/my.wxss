/* pages/my/my.wxss */
/* 登录页面 */
.myLogin{
  height: 400rpx;
  background-color: #328EEB;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.myLogin image{
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
}

.myLogin text{
  color:white;
  font-size: 40rpx;
}

.myFavorite{
  padding: 20rpx;
}

.title_wrap{
  font-size: 45rpx;
  font-weight:bold;
  margin:5rpx;
}
.content_wrap{
  font-size: 40rpx;
}

.whole{
  height: 270rpx;
  white-space: nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  padding: 10rpx;
}

.picture{
  width:270rpx;
  height: 270rpx;
  float: left;
  padding: 10rpx;
  border-radius: 25%;
}

.content{
  white-space: pre-line;
  padding: 20rpx;
  border-bottom: 5rpx dashed#D4F2E7
}

/* 反馈与建议的样式 */
.userButton {
 width: 680rpx;
 background: white;
 border: none;
 text-align: left;
 padding: 5px 10px;
 line-height: 1.6;
 border-radius: 0;
}
.userButton::after {
 border: none;
 border-radius: 0;
}

.button_title {
 font-size: 1rem;
}

.seperate {
 width: 100%;
 height: 1px;
 background: gainsboro;
}

.row_wrap{
  display: flex;
  flex-direction: row;
  padding: 10rpx;
}